<!DOCTYPE html>
<html>
  <head>
    <title>Hospital</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link href='https://fonts.google.com/specimen/Open+Sans' rel='application' type='text/css' />
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid"">
        <a href="/" class="brand-logo font-size font-weight-bold text-uppercase">
          Hospital
        </a>
        <% if current_user.present? %>
          <ul class="navbar-nav">
            <% if can?(:create, Appointment) %>
              <li class="nav-item">
                <%= link_to "Set new appointment", new_appointment_path, class: "nav-link"%>
              </li>
            <% end %>
            <li class="nav-item">
                <%= link_to current_user.full_name, edit_user_registration_path, class: "nav-link"%>
            </li>
            <li class="nav-item">
              <%= link_to "sign out", destroy_user_session_path, method: :delete, class: "nav-link" %>
            </li>
          </ul>
        <% end%>
      </div>
    </nav>
    <div class="content col-xs-8 col-md p-4">
      <%= yield %>
    </div>
  </body>
</html>
